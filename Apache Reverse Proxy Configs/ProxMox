<IfModule mod_ssl.c>
  <VirtualHost *:443>

        ServerAdmin jon@xxxx.com
        ServerName r930.xxxx.com

        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/proxmox-access.log combined

        SSLEngine on
        SSLProxyEngine on
        SSLProxyVerify none
        SSLProxyCheckPeerCN off
        SSLProxyCheckPeerName off

        ProxyRequests off
        ProxyPreserveHost on

        <Location />
            # Only let internal Ip's hit this
            Require ip 192.168.0.0/24
        </Location>

        <Location />
            ProxyPass https://192.168.3.50:8006/
            ProxyPassReverse https://192.168.3.50:8006/
        </Location>

        <LocationMatch ^/(api2/json/nodes/[^\/]+/[^\/]+/[^\/]+/vncwebsocket.*)$>
            ProxyPass wss://192.168.3.50:8006/$1 retry=0
        </LocationMatch>

        <Location /websockify>
            ProxyPass wss://192.168.3.50:8006
            ProxyPassReverse wss://192.168.3.50:8006
        </Location>

        SSLCertificateFile /etc/letsencrypt/live/xxxx.com/fullchain.pem
        SSLCertificateKeyFile /etc/letsencrypt/live/xxxx.com/privkey.pem
        Include /etc/letsencrypt/options-ssl-apache.conf
  </VirtualHost>
</IfModule>